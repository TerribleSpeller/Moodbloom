<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageCommunity">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgcomnew"
        android:scaleType="centerCrop" />

    <!-- Previous Button -->
    <ImageView
        android:id="@+id/third_activity_previous_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/left_arrow" />

    <!-- CardView with white background and rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/third_activity_previous_button"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Text View -->
            <TextView
                android:id="@+id/pagefourtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rambla_regular"
                android:textColor="@color/heading"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Follow us for more Exciting Updates" />

            <!-- Button Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <!-- Facebook Button -->
                <Button
                    android:id="@+id/facebook_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/facebook"
                    android:layout_marginBottom="20dp"/>

                <!-- Twitter Button -->
                <Button
                    android:id="@+id/twitter_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/twitter" />

                <!-- Instagram Button -->
                <Button
                    android:id="@+id/insta_button"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/insta"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
